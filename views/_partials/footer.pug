footer.border-top.bg-white.mt-auto
    .container-fluid.d-flex.flex-column.flex-lg-row.align-items-center.justify-content-center.footer-container.mx-3.mx-md-5.mx-xl-auto
        .d-flex.align-items-center.footer-logo.mb-2.mb-lg-0
            a(href='https://www.jsdelivr.com/', rel='noopener', target='_blank')
                include /assets/img/jsdelivr_footer_logo.svg

        .d-flex.justify-items-center.flex-column.mr-lg-auto.mb-2.mb-lg-0
            .text-center.text-lg-left
                | Powered by
                |
                a.text-decoration-none(href='https://www.jsdelivr.com/')
                    | jsDelivr
                |
                | and
                |
                a.text-decoration-none(href='https://globalping.io/')
                    | Globalping
                    |
                    | network testing platform
            .text-center.text-lg-left
                | Sponsored by
                |
                each friend, index in config.app.friends
                    if (index === config.app.friends.length - 1)
                        |  &amp;
                        |
                    else if (index > 0)
                        | ,
                        |
                    a.text-decoration-none.custom-link(href=friend.url, rel=`noopener${friend.nofollow !== false ? " nofollow" : ""}`, target='_blank')=friend.name

        .d-flex.align-items-center.mb-2.mb-lg-0.about-policy
            a.mr-5.text-decoration-none.custom-link(href='/about/')
                | About
            a.text-decoration-none.custom-link(href='https://www.jsdelivr.com/terms/privacy-policy-jsdelivr-net', rel='noopener', target='_blank')
                | Privacy Policy

